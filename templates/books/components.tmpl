{{ define "release-list" }}<table>
  <thead>
    <tr><th>Title</th><th>Chapter</th><th>Group</th><th>Date Added</th></tr>
  </thead>
  <tbody>
    {{ range .}}
    <tr><td><a href=/series/{{ .BookSeries.Id }}/{{ slugify .BookSeries.Title }}>{{ .BookSeries.Title }}</a></td><td>{{ .ChapterRange }}</td><td>({{ .Language }}) {{ .TranslationGroup.Name }}</td><td>{{ .ReleaseDate }}</td></tr>
    {{ end }}
  </tbody>
</table>
{{ end }}

{{ define "series-list" }}<table>
  <thead>
    <tr><th>Title</th><th>Vintage</th><th>Authors</th><th>Date Added</th></tr>
  </thead>
  <tbody>
    {{ range .}}
	<tr{{ if .NSFW }} class=nsfw {{ end }}>
      <td><a href=#>{{ .Title }}</a></td>
	  <td>
		  <ul class=rating-stars>
			  {{ range .RatingStars }}
			  <li class={{ . }}></li>
			  {{ end }}
		  </ul>
	  </td>
	  <td>{{ range .Tags }}<a class=tag href="/tag/{{ urlquery . }}">{{ . }}</a>{{ end }}</td>
      <td>{{ .Vintage }}<td>
      <td>{{ .DateAdded }}</td>
    </tr>
    {{ end }}
  </tbody>
</table>
{{ end }}
