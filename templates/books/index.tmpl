{{ define "index" }}<!doctype html>
<head>
	<meta charset=utf-8>
	<meta name=viewport content="initial-scale=1.0">
	<meta name=description content="A place to discover and opinionate on Japanese print-based entertainment.">
  <link rel=stylesheet href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700&amp;subset=latin,latin-ext">
  <link rel=stylesheet href="http://fonts.googleapis.com/css?family=Share">
	<title>True story</title>
	<link rel=stylesheet href=/static/style.css><!-- TODO: CDN -->
	<link rel=stylesheet href=/static/mobile.css media="only screen and (max-width: 1024px)">
  <script src="/static/books.js"></script>
</head>
<body>
	<section id=main>
		<header>
      <h1><a href="/">本物語。</a></h1>
		</header>
		<aside class=sidebar id=find>
      <section id=search>
        <ul class=filter-entry>
          <li>
            <label>
              <select class=filter-type dir=rtl>
                <option value=title>Title</option>
                <option value=tags>Tags</option>
                <option value=demographic>Demographic</option>
                <option value=author>Author</option>
                <option value=magazine>Magazine</option>
                <option value=publisher>Publisher</option>
              </select>
            </label>
            <input type=text class=filter-content placeholder="Keywords...">
            <button class=remove-filter title="Remove this search filter">×</button>
          </li>
        </ul>
        <button id=search-button title="Execute search">Search <em>→</em></button>
        <button id=add-filter title="Add search filter">+</button>
        <hr class=clear>
      </section>
      <nav id=browse>
        <h1>Browse</h1>
        <ul>
          <li><a href=/series>Series</a></li>
          <li><a href=/authors>Authors</a></li>
          <li><a href=/magazines>Magazines</a></li>
          <li><a href=/publishers>Publishers</a></li>
          <li><a href=/translators>Translators</a></li>
          <li><a href=/releases>Releases</a></li>
        </ul>
      </nav>
      <nav id=filters>
        <h1>Filter by...</h1>
        <ul>
          <li><a href=/demographics>Demographics</a></li>
          <li><a href=/tags>Tags</a></li>
        </ul>
      </nav>
      <hr class=clear>
    </aside>
		<section id=latest>
			<section id=latest-releases>
				<h1>Fresh Out Of Photoshop</h1>
				{{ template "release-list-by-added" .Releases }}
			</section>
			<section id=latest-books>
				<h1>Recently Added Titles</h1>
				{{ template "series-list-by-added" .Series }}
			</section>
		</section>
    <aside class=sidebar id=news>
      <h1>Site news</h1>
      {{ with .News }}
      {{ template "news-post" . }}
      {{ else }}
      <p>No news at this time.</p>
      {{ end }}
		</aside>
		<hr class=clear>
	</section>
	<footer>
		<section id=copyright>
			<h1>Copyright © 2013 <code><a href="http://displaynone.us">display: <b>none</b>;</a></code>.&nbsp;&nbsp;&nbsp;All rights reserved.</h1>
      <p id=footer-links><a href="/about">About</a> — <a href="/legal">Legal</a> — <a href="https://github.com/moshee/books">Hacking</a> — <a href=#>IRC</a> — <a href="/help">Help</a></p>
		</section>
		<section id=footer-logo><a href="http://displaynone.us"></a></section>
	</footer>
</body>
{{ end }}

{{ define "index-error" }}
<p>{{ .Error }}</p>
{{ end }}
