{{ define "index" }}{{ template "head" }}
<body class="front{{ if .User }} logged-in{{ end }}">
	{{ template "header-bar" }}
  <aside id=cp>
    {{ template "user-cp" .User }}
  </aside>
  {{ with .Banner }}
  <aside class="{{ .Kind }} banner">
    <h1>{{ .Title }}</h1>
    {{ if .Body }}<p>{{ .Body }}</p>{{ end }}
  </aside>
  {{ end }}
	<section id=main>
	{{ if .User }}
		{{ with $feeds := .User.Feeds }}
		<h1>{{ .Name }}'s Feeds</h1>
			{{ range .Feeds }}
				{{ template "feed" . }}
			{{ end }}
		{{ end }}
	{{ end }}
		<div class=indicator>Public Feeds</div>
	{{ range .Feeds }}
		{{ template "feed" . }}
	{{ end }}
  <hr class=clear>
	</section>
  {{ template "footer" }}
</body>
{{ end }}

{{ define "index-error" }}
<p>{{ .Error }}</p>
{{ end }}
