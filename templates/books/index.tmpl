{{ define "index" }}<!doctype html>
<head>
	<meta charset=utf-8>
	<meta name=viewport content="initial-scale=1.0">
	<meta name=description content="A place to discover and opinionate on Japanese print-based entertainment.">
	<link rel=stylesheet href="http://fonts.googleapis.com/css?family=Source+Sans+Pro:400,700|Magra&subset=latin,latin-ext">
	<title>True story</title>
	<link rel=stylesheet href=/static/style.css>
	<script src="/static/books.js"></script>
</head>
<body class="front{{ if .User }} logged-in{{ end }}">
	{{ template "header-bar" .User }}
	<section id=main>
	{{ if .User }}
		{{ with $feeds := .User.Feeds }}
		<h1>{{ .Name }}'s Feeds</h1>
			{{ range .Feeds }}
				{{ template "feed" . }}
			{{ end }}
		{{ end }}
	{{ end }}
		<div class=indicator>Public Feeds</div>
	{{ range .Feeds }}
		{{ template "feed" . }}
	{{ end }}
  <hr class=clear>
	</section>
  {{ template "footer" }}
</body>
{{ end }}

{{ define "index-error" }}
<p>{{ .Error }}</p>
{{ end }}
